<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vBox" alignment="CENTER" prefHeight="360.0" prefWidth="690.0" spacing="30.0" stylesheets="@../../../style_ipConfig.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bonet.threaddungeons.IPConfigController">
    <children>
        <Label text="Introduce la direccion IP" textFill="WHITE" VBox.vgrow="ALWAYS">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
         <effect>
            <DropShadow />
         </effect></Label>
        <TextField fx:id="ipTextField" maxWidth="200.0" promptText="Server IP" text="localhost">
         <effect>
            <DropShadow />
         </effect></TextField>
        <Button fx:id="btn_accept" onAction="#handleOkButtonAction" text="ACEPTAR" textFill="WHITE">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <effect>
            <DropShadow />
         </effect></Button>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <effect>
      <DropShadow />
   </effect>
</VBox>
